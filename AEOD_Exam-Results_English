<body class="bg-gray-100 p-6">

    <div class="container">
        <h1 class="text-4xl font-bold text-center mb-6 text-gray-800">Exam Results</h1>

        <div id="score-section" class="text-center mb-8">
            <h2 class="text-2xl font-semibold text-gray-700">Your Final Score:</h2>
            <p id="final-score" class="text-5xl font-extrabold mt-2">
                <span class="text-gray-900" id="correct-count">0</span> / <span class="text-gray-500" id="total-questions">0</span>
            </p>
        </div>

        <div id="results-list" class="space-y-4">
            <!-- Results will be dynamically added here -->
        </div>

        <div class="flex justify-center mt-8">
            <button onclick="window.location.href = '#'" class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-full shadow-lg hover:bg-blue-700 transition duration-300">
                Retake Exam
            </button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // This is sample data. In a real application, you would receive this data from the previous page.
            const resultsData = [
                { question: "What is 2 + 2?", isCorrect: true, yourAnswer: "4", correctAnswer: "4" },
                { question: "What is the capital of France?", isCorrect: true, yourAnswer: "Paris", correctAnswer: "Paris" },
                { question: "Who wrote 'Hamlet'?", isCorrect: false, yourAnswer: "Charles Dickens", correctAnswer: "William Shakespeare" },
                { question: "What is the boiling point of water?", isCorrect: false, yourAnswer: "90°C", correctAnswer: "100°C" },
                { question: "What is the chemical symbol for Oxygen?", isCorrect: true, yourAnswer: "O", correctAnswer: "O" }
            ];

            const resultsList = document.getElementById('results-list');
            const correctCountElement = document.getElementById('correct-count');
            const totalQuestionsElement = document.getElementById('total-questions');

            let correctAnswers = 0;
            const totalQuestions = resultsData.length;

            resultsData.forEach(result => {
                const resultItem = document.createElement('div');
                const resultClass = result.isCorrect ? 'correct' : 'incorrect';
                if (result.isCorrect) {
                    correctAnswers++;
                }
                
                resultItem.className = `p-4 rounded-xl shadow-sm transition-all duration-300 ${result.isCorrect ? 'bg-green-50' : 'bg-red-50'}`;
                resultItem.innerHTML = `
                    <p class="font-semibold text-gray-700">${result.question}</p>
                    <p class="text-sm mt-1">
                        Your Answer: <span class="${resultClass} font-medium">${result.yourAnswer}</span>
                    </p>
                    <p class="text-sm mt-1">
                        Correct Answer: <span class="text-gray-900 font-medium">${result.correctAnswer}</span>
                    </p>
                `;
                resultsList.appendChild(resultItem);
            });

            correctCountElement.textContent = correctAnswers;
            totalQuestionsElement.textContent = totalQuestions;

            // This function simulates passing data from a previous page
            // In a real scenario, the data would be sent via localStorage, a server, or URL parameters.
            function saveResults() {
                localStorage.setItem('examResults', JSON.stringify(resultsData));
            }
        });
    </script>
</body>
</html>

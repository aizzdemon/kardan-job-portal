  <script>
    function sendBulkWhatsApp() {
      let numbers = document.getElementById("phoneNumbers").value.trim().split("\n");
      let message = document.getElementById("message").value.trim();

      if (numbers.length === 0 || !numbers[0]) {
        alert("Please enter at least one phone number!");
        return;
      }

      numbers.forEach((num, index) => {
        let cleanNum = num.replace(/\D/g, ""); // remove non-digits
        if (cleanNum) {
          let url = "https://wa.me/" + cleanNum;
          if (message) {
            url += "?text=" + encodeURIComponent(message);
          }
          setTimeout(() => {
            window.open(url, "_blank");
          }, index * 1200); // delay so tabs donâ€™t open all at once
        }
      });
    }
  </script>

  <!-- Firebase + Admin Only Access Check -->
  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-app.js";
    import { getAuth, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-auth.js";

    const firebaseConfig = {
      apiKey: "AIzaSyBeGZBE1u1-y1hDWbRouchgwkgp89D973I",
      authDomain: "kar-kardan.firebaseapp.com",
      projectId: "kar-kardan",
      storageBucket: "kar-kardan.firebasestorage.app",
      messagingSenderId: "554147696994",
      appId: "1:554147696994:web:221dcb883e3b65dcea5c3b"
    };
    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);

    const bulkSenderNav = document.getElementById("bulkSenderNav");
    const logoutBtn = document.getElementById("logoutBtn");

    onAuthStateChanged(auth, (user) => {
      if (!user) {
        window.location.href = "login.html";
      } else {
        if (user.email === "oster2you@gmail.com") {
          bulkSenderNav.classList.remove("hidden"); // show Bulk Sender only for admin
        } else {
          // Non-admin trying to open this page -> block
          if (window.location.pathname.includes("bulk-sender.html")) {
            alert("Access Denied: Admin Only");
            window.location.href = "profile.html";
          }
        }
      }
    });

    logoutBtn.addEventListener("click", () => {
      signOut(auth).then(() => {
        window.location.href = "login.html";
      });
    });
  </script>

